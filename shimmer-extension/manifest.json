{
  "manifest_version": 3,
  "name": "Shimmer Companion",
  "version": "1.3",
  "permissions": ["tabs", "scripting", "bluetooth", "storage"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.netflix.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.netflix.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": { "default_title": "Open Shimmer Companion" }
}
